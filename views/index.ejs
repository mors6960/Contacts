<%- include('layout/header') %> <!-- Including header -->

<%- include('layout/footer') %> <!-- Including footer -->


<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <% if (message) { %>
                <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                    <strong>
                        <%= message.message %>
                    </strong>
                </div>
            <% } %>
        </div>
    </div>
</div>


<div class="container">
    <div class="row">
       
        <table class="table table-striped text-center mt-5">
            <tr class="table-dark">
                <th>ID</th>
                <th>Image</th>
                <th>Name</th>
                <th>Phone Number</th>
                <th>E-mail</th>
                <th>Action</th>
            </tr>
            <% users.forEach(function(user,index) { %>
                <tr>
                    <td><%= index+1  %></td>
                    <td><img src="/<%= user.image %>" alt="User Image" width="60" height="60"></td>
                    <td><%= user.name %></td>
                    <td><%= user.phone %></td>
                    <td><%= user.email %></td>
                    <td>
                        <a href="/edit/<%= user._id %>" class="text-success">
                            <span class="material-symbols-outlined">edit</span>
                        </a>
                        <a href="" class="text-danger" onclick="u_delete('<%= user._id %>')">
                            <span class="material-symbols-outlined" id="user_delete" >delete</span>
                            
                        </a>
                    </td>
                </tr>
            <% }); %>
        </table>
    </div>
</div>

<script>
    function u_delete(id) {

        if (confirm("Are you sure?")) {
            window.location.href = '/delete/' + id;
        }
    }
</script>